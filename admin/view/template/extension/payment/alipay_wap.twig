{{ header }} {{ column_left }} 
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-pp-std-uk" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }} </h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %} 
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }} </a></li>
        {% endfor %} 
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error.error_warning %} 
    <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error.error_warning }} 
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %} 
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }} </h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-pp-std-uk" class="form-horizontal">
          <ul class="nav nav-tabs">
            <li class="active"><a href="#tab-general" data-toggle="tab">{{ tab_general }} </a></li>
            <li><a href="#tab-status" data-toggle="tab">{{ tab_order_status }} </a></li>
          </ul>
          <div class="tab-content">
            <div class="tab-pane active" id="tab-general">
              <div class="form-group required">
                <label class="col-sm-2 control-label" for="entry-alipay-wap-seller-email"><span data-toggle="tooltip" title="{{ help_seller_email }}">{{ entry_alipay_wap_seller_email }}</span></label>
                <div class="col-sm-10">
                  <input type="text" name="payment_alipay_wap_seller_email" value="{{ payment_alipay_wap_seller_email }}" placeholder="{{ entry_alipay_wap_seller_email }}" id="entry-alipay-wap-seller-email" class="form-control"/>
                  {% if error_alipay_wap_seller_email %} 
                  <div class="text-danger">{{ error_alipay_wap_seller_email }}</div>
                  {% endif %} 
                </div>
              </div>
              <div class="form-group required">
                <label class="col-sm-2 control-label" for="entry-alipay-wap-partner">{{ entry_alipay_wap_partner }}</label>
                <div class="col-sm-10">
                  <input type="text" name="payment_alipay_wap_partner" value="{{ payment_alipay_wap_partner }}" placeholder="{{ entry_alipay_wap_partner }}" id="entry-alipay-wap-partner" class="form-control"/>
                  {% if error_alipay_wap_partner %} 
                  <div class="text-danger">{{ error_alipay_wap_partner }}</div>
                  {% endif %} 
                </div>
              </div>
              
              <div class="form-group required">
                <label class="col-sm-2 control-label" for="entry-alipay-wap-security-code">{{ entry_alipay_wap_security_code }} </label>
                <div class="col-sm-10">
                  <input type="text" name="payment_alipay_wap_security_code" value="{{ payment_alipay_wap_security_code }}" placeholder="{{ entry_alipay_wap_security_code }}" id="entry-alipay-wap-security-code" class="form-control"/>
                  {% if error_alipay_wap_security_code %} 
                  <div class="text-danger">{{ error_alipay_wap_security_code }}</div>
                  {% endif %} 
                </div>
              </div>
              
              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-total"><span data-toggle="tooltip" title="{{ help_total }}">{{ entry_total }} </span></label>
                <div class="col-sm-10">
                  <input type="text" name="payment_alipay_wap_total" value="{{ payment_alipay_wap_total }}" placeholder="{{ entry_total }}" id="input-total" class="form-control"/>
                </div>
              </div>
              
             
              
              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-alipay-wap-sort-order">{{ entry_alipay_wap_sort_order }} </label>
                <div class="col-sm-10">
                  <input type="text" name="payment_alipay_wap_sort_order" value="{{ payment_alipay_wap_sort_order }}" placeholder="{{ entry_alipay_wap_sort_order }}" id="input-alipay-wap-sort-order" class="form-control"/>
                </div>
              </div>
              
              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-geo-zone">{{ entry_geo_zone }} </label>
                <div class="col-sm-10">
                  <select name="payment_alipay_wap_geo_zone_id" id="input-geo-zone" class="form-control">
                    <option value="0">{{ text_all_zones }}</option>
                    {% for geo_zone in geo_zones %} 
                    {% if geo_zone.geo_zone_id  ==  payment_alipay_wap_geo_zone_id %} 
                    <option value="{{ geo_zone.geo_zone_id }}" selected="selected">{{ geo_zone.name }}</option>
                    {% else %}   
                    <option value="{{ geo_zone.geo_zone_id }}">{{ geo_zone.name }}</option>
                    {% endif %} 
                    {% endfor %} 
                  </select>
                </div>
              </div>
              
              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-status">{{ entry_alipay_wap_status }} </label>
                <div class="col-sm-10">
                  <select name="payment_alipay_wap_status" id="input-alipay-wap-status" class="form-control">
                    {% if payment_alipay_wap_status %} 
                    <option value="1" selected="selected">{{ text_enabled }}</option>
                    <option value="0">{{ text_disabled }} </option>
                    {% else %}   
                    <option value="1">{{ text_enabled }} </option>
                    <option value="0" selected="selected">{{ text_disabled }}</option>
                    {% endif %} 
                  </select>
                </div>
              </div>
              
              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-debug"><span data-toggle="tooltip" title="{{ help_log }}">{{ entry_log }} </span></label>
                <div class="col-sm-10">
                  <select name="payment_alipay_wap_log" id="input-debug" class="form-control">
                    {% if payment_alipay_wap_log %} 
                    <option value="1" selected="selected">{{ text_enabled }}</option>
                    <option value="0">{{ text_disabled }} </option>
                    {% else %}   
                    <option value="1">{{ text_enabled }} </option>
                    <option value="0" selected="selected">{{ text_disabled }}</option>
                    {% endif %} 
                  </select>
                </div>
              </div>
              
            </div>
            
            
            
            <div class="tab-pane" id="tab-status">
              
             
              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-total"><span data-toggle="tooltip" title="{{ help_trade_finished }}">{{ entry_trade_finished_status }} </span></label>
                <div class="col-sm-10">
                  <select name="payment_alipay_wap_trade_finished_status_id" class="form-control">
                    {% for order_status in order_statuses %} 
                    {% if order_status.order_status_id  ==  payment_alipay_wap_trade_finished_status_id %} 
                    <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
                    {% else %}   
                    <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                    {% endif %} 
                    {% endfor %} 
                  </select>
                </div>
              </div>
              
              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-total"><span data-toggle="tooltip" title="{{ help_trade_success }}">{{ entry_trade_success_status }} </span></label>
                <div class="col-sm-10">
                  <select name="payment_alipay_wap_trade_success_status_id" class="form-control">
                    {% for order_status in order_statuses %} 
                    {% if order_status.order_status_id  ==  payment_alipay_wap_trade_success_status_id %} 
                    <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
                    {% else %}   
                    <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                    {% endif %} 
                    {% endfor %} 
                  </select>
                </div>
              </div>
              
              
            </div>
            
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
{{ footer }} 