<div class="list-group">
  {% for faq_category in faq_categories %}
  {% if faq_category.faq_category_id == faq_category_id %} 
  <a href="{{ faq_category.href }}" class="list-group-item active">{{ faq_category.name }}</a> 
  {% if faq_category.children %}
  {% for child in faq_category.children %}
  {% if child.faq_category_id == child_id %}
  <a href="{{ child.href }}" class="list-group-item active">&nbsp;&nbsp;&nbsp;- {{ child.name }}</a> 
  {% else %} 
  <a href="{{ child.href }}" class="list-group-item">&nbsp;&nbsp;&nbsp;- {{ child.name }}</a>
  {% endif %}
  {% endfor %}
  {% endif %}
  {% else %} <a href="{{ faq_category.href }}" class="list-group-item">{{ faq_category.name }}</a>
  {% endif %}
  {% endfor %}
</div>
