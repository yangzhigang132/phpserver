<h3>{{ heading_title }}</h3>
<div class="row">
  {% for blog in blogs %}
  <div class="product-layout col-lg-3 col-md-3 col-sm-6 col-xs-12">
    <div class="product-thumb transition">
      <div class="caption">
        <h4><a href="{{ blog.href }}">{{ blog.name }}</a></h4>
        <p>{{ blog.brief }}</p>
        
      </div>
    </div>
  </div>
  {% endfor %}
</div>
